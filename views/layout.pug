doctype html
html
  head
    title= title
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href='https://fonts.googleapis.com/css2?family=Gloria+Hallelujah&display=swap' rel='stylesheet')
    link(href='https://fonts.googleapis.com/css2?family=Open+Sans+Condensed:wght@300&display=swap' rel='stylesheet')
  body
    if (currentUser)
      header
        ul.menu
          button.menu-burger
            img.menu-icon(src='/images/menu.svg')
          li.menu-option 
            a(href='/') Timeline
          li.menu-option  
            a(href='/users') Find Friends
          li.menu-option  
            a(href='/users/' + currentUser._id + '/friend-requests') Friend Requests
            if (currentUser.friendRequests.length)
              span.connector : 
              span.noOfRequests #{currentUser.friendRequests.length}
          li.menu-option  
            a(href='/users/' + currentUser._id + '/friend-list') My Friends
        div.userPicture
          img.profilePicInMenu(src=currentUser.picture)
          ul.dropdown-menu
            li.currentUserInMenu
              p #{currentUser.firstName} #{currentUser.lastName}
            li 
              a(href='/users/' + currentUser._id) My Profile
            li
              a(href='/users/' + currentUser._id + '/manage') Manage Account
            li.logout
              a(href='/log-out') Log out
                
    block content
